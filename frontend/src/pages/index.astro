---
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Acortador de URLs - Publimetro" />
    <title>Publimetro URL Shortener</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Fira+Code&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href="/favicon.png?v=3" />
  </head>
  <body>
    <div class="login-container">
      <div class="login-card card-glass fade-in">
        <div class="login-header">
          <img
            src="/publimetro-logo.png"
            alt="Publimetro Shortener"
            class="logo-img"
          />
          <p class="text-muted">URL Shortener</p>
        </div>

        <form id="loginForm" class="login-form">
          <div class="input-group">
            <label for="password">Contrase침a</label>
            <input
              type="password"
              id="password"
              class="input"
              placeholder="Ingresa la contrase침a"
              required
              autocomplete="current-password"
            />
          </div>

          <button type="submit" class="btn btn-primary w-full">
            Ingresar
          </button>

          <p
            id="error"
            class="text-error text-center text-sm mt-md"
            style="display: none;"
          >
            Contrase침a incorrecta
          </p>
        </form>
      </div>
    </div>

    <style>
      .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-lg);
        background:
          radial-gradient(
            ellipse at top,
            rgba(35, 133, 75, 0.1) 0%,
            transparent 60%
          ),
          var(--background);
      }

      .login-card {
        width: 100%;
        max-width: 400px;
        padding: var(--space-xl);
        overflow: hidden;
      }
      
      .login-header {
        text-align: center;
        margin-bottom: var(--space-xl);
        width: 100%;
        overflow: hidden;
      }
      
      .login-header .logo-img {
        width: 100%;
        max-width: 280px;
        height: auto;
        max-height: 80px;
        margin: 0 auto 1rem;
        display: block;
        object-fit: contain;
      }
      
      .login-header h1 {
        font-size: 2.5rem;
        margin-bottom: var(--space-xs);
      }
      
      .login-form {
        display: flex;
        flex-direction: column;
        gap: var(--space-lg);
      }

      /* Mobile responsive for login */
      @media (max-width: 480px) {
        .login-container {
          padding: var(--space-md);
        }
        
        .login-card {
          padding: var(--space-lg);
          max-width: 100%;
        }
        
        .login-header .logo-img {
          max-width: 100%;
          max-height: 60px;
        }
        
        .login-form {
          gap: var(--space-md);
        }
        
        .input {
          padding: 0.75rem;
          font-size: 0.95rem;
        }
        
        .btn {
          padding: 0.75rem;
        }
      }
    </style>

    <script>
      const API_URL = "";

      document
        .getElementById("loginForm")
        ?.addEventListener("submit", async (e) => {
          e.preventDefault();
          const password = (
            document.getElementById("password") as HTMLInputElement
          ).value;
          const errorEl = document.getElementById("error");

          try {
            const response = await fetch(`${API_URL}/api/auth`, {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ password }),
            });

            if (response.ok) {
              const data = await response.json();
              sessionStorage.setItem("authenticated", "true");
              sessionStorage.setItem("role", data.role);
              sessionStorage.setItem("token", password); // Store password as token
              window.location.href = "/dashboard";
            } else {
              if (errorEl) errorEl.style.display = "block";
            }
          } catch (error) {
            console.error("Error:", error);
            if (errorEl) {
              errorEl.textContent = "Error de conexi칩n";
              errorEl.style.display = "block";
            }
          }
        });

      if (sessionStorage.getItem("authenticated") === "true") {
        window.location.href = "/dashboard";
      }
    </script>
  </body>
</html>
